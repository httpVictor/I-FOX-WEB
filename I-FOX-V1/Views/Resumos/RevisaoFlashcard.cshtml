@{

    TempData["footer"] = "verdadeiro";
}
@section Estilos{
    <link rel="stylesheet" href="~/css/flashcards.css"/>
    <link rel="stylesheet" href="~/css/flashcard_card.css"/>
}

@section JavaScript{
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="~/js/flashcard_requisicao.js"></script>
}
<section class="teste">

    <input id="codigo" value="@ViewBag.Id_cards" />

    <div class="bloco">

        <img alt="" src="~/img/i_fox/raposa-cabecalhos.png">

        <div class="escrita">
            <h2>Teste sua memória</h2>
            <p>tente lembrar do verso e depois selecione o quão difícil foi para lembrar!</p>
            <h3>TÍTULO DO RESUMO</h3>
        </div>

        <img alt="" src="~/img/i_fox/raposa-cabecalhos.png">

    </div>

    <div class="cartao">

        <div class="cabecalho-cartao">
            <h3>Cartão 1</h3>
            <img alt="" src="~/img/i_fox/raposa-flutuante-png.png" height="70" />
        </div>

        <div class="card">
            <label>
                <input type="checkbox" />
                <div class="flip-card">
                    <div class="front">
                        <p>Aqui vem a frente</p>
                    </div>
                    <div class="back">
                        <p>Aqui vem o verso</p>
                    </div>
                </div>
            </label>
        </div>

        <!-- Em baixo do cartão -->
        <div class="mudarCard">
            <img id="last" alt="" src="~/img/icones_resumo/previous-icon.png">
            <p id="cardstotais"></p>
            <img id="next" alt="" src="~/img/icones_resumo/next-icon.png">
        </div>

        <div class="resposta-card">
            <p>QUAL O NÍVEL DE DIFICULDADE DESSE CARD?</p>

            <div class="opcoes_resposta">

                <input type="radio" name="opcao-resposta" id="facil" value="facil">
                <label for="facil" class="opcao-resposta">
                    <p>Fácil</p>
                    <img src="~/img/pasta_flashs/resposta-facil.png" alt="" id="facil">
                </label>

                <input type="radio" name="opcao-resposta" id="medio" value="medio">
                <label for="medio" class="opcao-resposta">
                    <p>Médio</p>
                     <img src="~/img/pasta_flashs/resposta-medio.png" alt="">
                </label>

                <input type="radio" name="opcao-resposta" id="dificil" value="dificil">
                <label for="dificil" class="opcao-resposta">
                    <p>Difícil</p>
                    <img src="~/img/pasta_flashs/resposta-dificil.png" alt="">
                </label>

                <input type="radio" name="opcao-resposta" id="errei" value="errei">
                <label for="errei" class="opcao-resposta">
                    <p>Errei</p>
                    <img src="~/img/pasta_flashs/resposta-errei.png" alt="">
                </label>

            </div>
        </div>

    </div>

</section>