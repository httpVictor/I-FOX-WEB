@{   
    ViewData["Title"] = "Nome Resumo";
}
@section Estilos{
    <link rel="stylesheet" href="~/css/resumoAudio.css" />
}
@section JavaScript{
    <script src="~/js/audio.js"></script>
}

<section class="funcao">

    <div class="bloco">
        <form method="post"> 
            <div class="cabecalho_resumo">
                <input type="text" id="titulo" name="titulo" value="titulo vem aq" class="sem_fundo" required>
                <h6>dd/MM/yyyy</h6>
            </div>
            <div class="audios_resumo">

                @if (Model != null)
                {
                    @foreach (Arquivo arquivo in Model)
                    {
                        //Passando o arquivo do áudio
                        string imagemRes = Convert.ToBase64String(arquivo.ArrayBytes);
                        string formato = "data:audio/mpeg;base64," + imagemRes;

                        //Aqui vem o áudio do banco
                        <audio id="myAudio" controls>
                            <source src="@formato" type="audio/mpeg">
                            Seu navegador não possui suporte ao elemento audio
                        </audio>

                        <div class="botoes">

                            <input type="checkbox" name="" id="">


                            <div class="arquivo">
                                <p>Nome do arquivo</p>
                            </div>


                            <div class="parar">
                                <div class="button play" onclick="playAudio()">
                                    <img src="~/img/icones_resumo/play_icon.png" alt="">
                                </div>


                                <div class="button pause" onclick="pauseAudio()">
                                    <img src="~/img/icones_resumo/pause_icon.png" alt="">
                                </div>
                            </div>

                        </div>

                    }
                }

                <div class="file">
                    <input type="file" name="nao_sei_ainda_:)" />
                </div>

                <button class="botao-laranja">SALVAR ARQUIVO</button>
            </div>

        </form>

    </div>

</section>
